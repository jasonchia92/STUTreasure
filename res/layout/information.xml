<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/info_introduc"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/info_intro" />

    <TextView
        android:id="@+id/info_departure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_introduc"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/info_des"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubeplayerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_departure"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp" >
    </com.google.android.youtube.player.YouTubePlayerView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtubeplayerview"
        android:paddingTop="25dp"
       android:gravity="center" >

        <Button
            android:id="@+id/btnBack_info"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@anim/back_button" />

        <Button
            android:id="@+id/buttonWeb"
            android:layout_width="80dp"
            android:layout_height="80dp"
                        android:layout_margin="5dp"
            
            android:background="@anim/info_internet_button" />

        <Button
            android:id="@+id/buttonPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
                        android:layout_margin="5dp"
            
            android:background="@anim/info_photo_button" />
    </LinearLayout>

</RelativeLayout>